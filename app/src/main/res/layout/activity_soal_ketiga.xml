<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtiga"
    tools:context=".SoalKetigaActivity">

    <ImageView
        android:id="@+id/soalketiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/dialoglogo" />

    <TextView
        android:id="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:gravity="center"
        android:text="Variasi dari sistem operasi linux"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_below="@id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:gravity="center"
        android:text="biasa disebut dengan ..."
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/jwb1s3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/soalketiga"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btngb"
            android:text="A. Alias"
            android:textSize="15sp" />

        <Button
            android:id="@+id/jwb2s3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/jwb1s3"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/btngb"
            android:text="b. Distro"
            android:textSize="15sp" />

        <Button
            android:id="@+id/jwb3s3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/jwb2s3"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/btngb"
            android:text="c. Open source"
            android:textSize="15sp" />

        <Button
            android:id="@+id/jwb4s3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/jwb3s3"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/btngb"
            android:text="d. Varian"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>