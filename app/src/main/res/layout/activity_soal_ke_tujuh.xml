<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgsatu"
    tools:context=".SoalKeTujuhActivity">

    <ImageView
        android:id="@+id/soalketujuh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/dialoglogo" />

    <TextView
        android:id="@+id/s"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:gravity="center"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Yang termasuk dalam siklus" />
    <TextView
        android:layout_below="@id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:gravity="center"
        android:text="hidup Activity adalah ?"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/soalketujuh"
            android:id="@+id/jwb1s7"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btngb"
            android:layout_marginBottom="10dp"
            android:text="A. oncreate( )" />

        <Button
            android:layout_below="@id/jwb1s7"
            android:id="@+id/jwb2s7"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:background="@drawable/btngb"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:text="b. onStart( )" />

        <Button
            android:layout_below="@id/jwb2s7"
            android:id="@+id/jwb3s7"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:background="@drawable/btngb"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:text="c. onResume( )" />

        <Button
            android:layout_below="@id/jwb3s7"
            android:id="@+id/jwb4s7"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:background="@drawable/btngb"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:text="d. Semua jawaban Benar" />
    </LinearLayout>

</RelativeLayout>